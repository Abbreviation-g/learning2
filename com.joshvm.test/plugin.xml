               id="com.joshvm.test.toolbar1">
            <command
                  commandId="com.joshvm.test.command1"
                  icon="icons/icon_16.png"
                  style="pulldown">
            </command>
            <command
                  commandId="com.joshvm.test.command2"
                  style="pulldown">
            </command>
         </toolbar>
      </menuContribution>
