   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.joshvm.test.command1"
            name="Test Menu">
      </command>
      <command
            id="com.joshvm.test.command2"
            name="Test Menu2">
      </command>
      <command
            id="com.joshvm.test.command3"
            name="Test Menu3">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="com.joshvm.test.TestStartup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.joshvm.test.view.JoshTestViewPart"
            id="com.joshvm.test.view"
            name="TestViewPart"
            restorable="true">
      </view>
   </extension>
   <extension
